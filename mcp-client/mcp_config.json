{
    "mcpServers": {
        "memory": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-memory"
            ],
            "transport": "stdio",
            "env": {
                "MEMORY_FILE_PATH": "memory.json"
            }
        },
        "vectorize_mcp": {
            "command": "uv",
            "args": [
                "--directory",
                "./mcp-servers",
                "run",
                "vectorize_mcp.py"
            ],
            "transport": "stdio"
        }
    }
}